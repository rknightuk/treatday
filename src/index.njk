        <script>
            (function() {
                playSound = (e) => {
                    document.querySelectorAll('audio').forEach(el => {
                        el.pause()
                        el.currentTime = 0
                    })
                    const fileKey = e.currentTarget.dataset.key
                    if (fileKey === 'random')
                    {
                        const clips = Array.from(document.querySelectorAll('audio'))
                        const clip = clips[Math.floor(Math.random()*clips.length)]
                        clip.play()
                        return
                    }
                    const audio = document.querySelector(`audio[data-key="${fileKey}"]`)
                    audio.play()
                }

                Array.from(document.getElementsByTagName('button')).forEach(function(element) {
                    element.addEventListener('click', playSound);
                })
            })()
        </script>
